#:import ScrollLayout View.MainScreen.components.scroll_layout
#:import NavBar View.tools

<MainScreenView>
    md_bg_color: 1, 1, 1, 1
    MDGridLayout:
        md_bg_color: 0, 0, 0, 0.1
        cols: 1
        
        TopBar:
            id: topbar

        ScrollLayout:
            id: refresh_layout
            refresh_callback: root.controller.refresh_callback
            root_layout: root

            MDGridLayout:
                id: barbers_grid
                cols: 1
                padding: 10, 10
                spacing: 10, 10
                adaptive_height: True
                row_default_height: dp(150)

        NavBar:
            id: navbar


